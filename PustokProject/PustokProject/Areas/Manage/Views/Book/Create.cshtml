@model Book

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class="mb-3 col-md-4">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="AuthorId">Author</label>
                            <select asp-for="AuthorId" class="form-control" id="exampleFormControlSelect1">
                                @foreach (Author author in ViewBag.Authors)
                                {
                                    <option value="@author.Id">@author.FullName</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="AuthorId"></span>

                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="GenreId">Genre</label>
                            <select asp-for="GenreId" class="form-control" id="exampleFormControlSelect1">
                                @foreach (Genre genre in ViewBag.Genres)
                                {
                                    <option value="@genre.Id">@genre.Name</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="GenreId"></span>

                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TagIds">Tag</label>
                            <select asp-for="TagIds" class="form-control" id="exampleFormControlSelect1">
                                @foreach (Tag tag in ViewBag.Tags)
                                {
                                    <option value="@tag.Id">@tag.Name</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="TagIds"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label asp-for="CostPrice" class="form-label">CostPrice</label>
                        <input asp-for="CostPrice" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="CostPrice"></span>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label asp-for="SalePrice" class="form-label">SalePrice</label>
                        <input asp-for="SalePrice" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="SalePrice"></span>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label asp-for="DiscountPercent" class="form-label">DiscountPercent</label>
                        <input asp-for="DiscountPercent" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                    </div>
                </div>
                <div class="mb-3 col-md-4 d-flex align-items-center">
                    <div class="form-check">
                        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" asp-for="IsAvailable">
                            Default checkbox
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Desc" class="form-label">Description</label>
                    <textarea asp-for="Desc" type="text" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PosterFile" class="form-label">PosterFile</label>
                    <textarea asp-for="PosterFile" type="text" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="PosterFile"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HoverPosterFile" class="form-label">HoverPosterFile</label>
                    <textarea asp-for="HoverPosterFile" type="text" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="HoverPosterFile"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFiles" class="form-label">ImageFiles</label>
                    <textarea asp-for="ImageFiles" type="text" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="ImageFiles"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div> 